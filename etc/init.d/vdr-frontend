command="/usr/bin/vdr-sxfe"
command_args="--silent --fullscreen --syslog --reconnect xvdr://localhost &>/dev/null"
pidfile="/var/run/vdr-frontend.pid"
start_stop_daemon_args="--user vdr --group vdr --make-pidfile --background"

depend() {
	need vdr-x11
	after vdr-x11
}
