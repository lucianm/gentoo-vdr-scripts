# $ID: $

description="Start minimal X server for VDR"

source /etc/conf.d/vdr

command="/usr/bin/X"
command_args="${X11_SERVER:=\:0 -br -nocursor -nolisten tcp -quiet}"
start_stop_daemon_args="--make-pidfile --background"
pidfile="/var/run/vdr-x11.pid"

depend() {
	need localmount
	after acpid
	before vdr
}
