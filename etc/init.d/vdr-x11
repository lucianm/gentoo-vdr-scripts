command="/usr/bin/X"
command_args="-nolisten tcp :0 -quiet -br -nocursor"
start_stop_daemon_args="--user vdr --group vdr --make-pidfile --background"
pidfile="/var/run/vdr-x11.pid"

depend() {
	need localmount
	after acpid
	before vdr
}
